<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carllewis14.goustoextraproducts.Activity.DetailActivity"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/productDetailTitle"
        android:gravity="center"
        android:textColor="@color/textColorSecondary"
        android:padding="2dp"
        android:textStyle="bold|italic"
        />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/productDetailImage"
        android:layout_below="@+id/productDetailTitle"
        android:src="@mipmap/ic_launcher"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignLeft="@+id/productDetailImage"
        android:layout_alignStart="@+id/productDetailImage"
        android:layout_below="@+id/productDetailImage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productDetailPrice"
            android:textSize="16sp"
            android:padding="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/category"
            android:textStyle="italic"
            android:textSize="14sp"
            android:padding="4dp"
            android:textColor="@color/textColorSecondary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productDetailDescription"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="2dp"
            />



    </LinearLayout>

</RelativeLayout>
</ScrollView>
